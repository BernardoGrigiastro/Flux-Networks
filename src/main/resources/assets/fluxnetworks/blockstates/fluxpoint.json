{
  "variants": {
    "connected=true": {
      "model": "fluxnetworks:block/variants/fluxpoint_on"
    },
    "connected=false": {
      "model": "fluxnetworks:block/variants/fluxpoint_off"
    }
  },
  "multipart": [
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod",
        "x": 90,
        "y": 180
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod",
        "x": 90,
        "y": 270
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod",
        "x": 90,
        "y": 0
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod",
        "x": 90,
        "y": 90
      }
    },
    {
      "when": {
        "down": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod"
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "fluxnetworks:block/variants/fluxpoint_rod",
        "x": 180
      }
    }
  ]
}